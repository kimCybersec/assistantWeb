#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    Label:
        text: 'Weekly schedule assistant'
        font_size: '24sp'
        size_hint_y: None
        height: self.texture_size[1] + 20

    Button:
        text: 'Create a schedule to meet your goals!!!!'
        on_press: app.showGoalPrompt()

    Button:
        text:'View all tasks'
        on_press: app.showAllTasks()

    Button:
        text: 'Mark tasks as done'
        on_press: app.markDone()

    Button:
        text: 'View summary'
        on_press: app.showSummary()

    Button:
        text: 'Exit'
        on_press: app.stop()

